@model IEnumerable<pesok.pro.Models.MenuEntry>
@{
    Layout = null;
    string act = "";
    if (ViewData["Url"] != null)
    {
        act = ViewData["Url"].ToString();
    }

}
<style>
.vert_menu ul {padding: 0px 0px 0.5em 0px}
.vert_menu {margin-right: 1.5em; width: 275px;background-color: #f6f6f6; display: block;border-radius: 6px;float: left;clear:left;}
.vert_menu li {font-family: MontserratBold;font-size: 15px;list-style-type: none;border-bottom: 1px solid #e2e2e2;height: auto;list-style:none;padding-left: 0px;}
.vert_menu li:last-child{border-bottom:none;}
.vert_menu li a {display: block; position: relative;color: #000;padding: 15px 15px 15px 25px; text-decoration: none;font-family: BebasNeueRegular;font-size: 20px;}
.vert_menu ul li a:hover {background-color: #e9e9e9;color:#474a68;}
.vert_menu ul li.selected {background-color: #ff5e14;color:#fff;}
.vert_menu ul li.selected a:hover {background-color: #ff5e14;color:#ddd;}
.vert_menu ul li.selected a {color:#fff;}

</style>

<div class="menu-email vert_menu">
   
    <ul>
        @foreach (var link in Model)
        {

            <li @( act == link.Url ? "class=selected" : "")><a asp-controller="Home" asp-action=@ViewData["TypeMenu"] asp-route-url=@link.Url asp-route-razdel="">@link.Header</a> </li>
        }
    </ul>
</div>