@model IEnumerable<pesok.pro.Models.ArticleListPage>
@{

	Layout = "~/Views/Shared/_LayoutArticles.cshtml";
}

<div class="pageContent col-span-12 sm:col-span-12 lg:col-span-8 xl:col-span-9 MontserratRegular text-base text-black leading-8 font-medium text-justify  tracking-wide">
		<div class="bg-white"  >
			<div  class="container pageContent mx-auto mb-24">
			@if (ViewData["TypeMenuArt"] == "List")
			{
				@foreach (var link in Model)
				{
					<div class="grid grid-cols-5  grip-10 mb-12" >
						<div class="col-span-1"><a rel='prefetch' asp-controller="Home" asp-action="Article" asp-route-url=@link.Url asp-route-razdel=@link.Razdel><img src=@link.Image_Src alt=@link.Title title=@link.Title></a></div>
						<div class="col-span-4 pl-10">
							<span class="time_art rounded-md  p-2 mr-2">@link.Date</span>
							<a rel='prefetch' asp-controller="Home" asp-action="Article" asp-route-url=@link.Url asp-route-razdel=@link.Razdel><span style="font-family:BebasNeueRegular ;" class="text-black text-2xl">@link.Title</span></a>
							<div class="descript mt-4">@link.Minitext  ...</div>
							<a class="link_art " asp-controller="Home" asp-action="Article" asp-route-url=@link.Url asp-route-razdel=@link.Razdel action rel='prefetch'>Подробнее</a>
						</div>
					</div>
				}
			}
			else 
			{
				<h1>@Model.First().Title</h1>
				@Html.Raw(Model.First().Html);
				
			}
		</div>
		 </div>
	  </div>	 


<style>
	.pageContent h1 {
		font-family: BebasNeueRegular;
		font-size: 40px;
		color: #505164;
		padding: 0em 0em 0.5em 0em;
		text-align: left;
		line-height: 1.2;
	}

	.pageContent h2 {
		font-family: BebasNeueRegular;
		font-size: 32px;
		color: #505164;
		padding: 0.7em 0em 0.5em 0em
	}

	.pageContent :h3 {
		font-family: OpenSansBold;
		font-size: 20px;
		color: #555;
		padding: 0.7em 0em 0.5em 0em
	}

	.pageContent p {
		font-family: OpenSansRegular;
		font-size: 17px;
		color: #292c48;
		text-align: justify;
		padding: 0.4em 0em;
		line-height: 1.9;
	}

	.pageContent ul {
		font-family: OpenSansRegular;
		font-size: 16px;
		color: #333;
		text-align: justify;
		line-height: 1.7;
		list-style-image: url('/image/kv.png');
		padding-left: 3em;
	}

	.pageContent li {
		padding: 0.4em 0em 0.4em 0.9em;
	}

	.pageContent :global(.table_price) {
		width: 100%;
		margin: 2em 0em;
	}

	.pageContent :global(.table_price th) {
		background-color: #ff5e14;
		color: #fff;
		font-family: BebasNeueRegular;
		padding: 1em 2em;
		font-weight: 300;
	}

	.pageContent :global(.table_price td) {
		background-color: #fff;
		color: #000;
		font-family: OpenSansRegular;
		padding: 0.4em 1em 0.4em 1em;
		font-weight: 300;
	}

	.pageContent :global(.table_price td:nth-child(2n) ) {
		text-align: right;
	}

	.pageContent :global(.table_price tr:nth-child(2n) td) {
		background-color: #f6f6f6;
	}

	.link_art {
		color: #000;
		font-size: 16px;
		font-family: OpenSansBold;
		border-bottom: 1px solid #ff5e14;
		text-decoration: none;
	}

	.time_art {
		font-size: 12px;
		text-align: left;
		font-family: OpenSansRegular;
		background-color: #2d2f52;
		color: white;
		margin-right: 1em;
	}

	.descript {
		font-size: 14px;
		text-align: justify;
		font-family: OpenSansRegular;
		line-height: 1.7;
	}

</style>